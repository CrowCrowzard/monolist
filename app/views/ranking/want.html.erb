<% @rankings.each_with_index do |(item, count), rank| %>
  <div class="container">
    <div class="container-inner inner-sm clearfix">
      <% if item != nil %>
        <h2>ランキング第<%= rank+1 %>位</h2>
        <p>欲しい人数<%= count %>人</p>
        <div class="item-single-main">
          <% @item = Item.find(item) %>
          <div class="image">
            <div class="img-wrap">
              <% if @item.large_image.present? %>
                <%= image_tag(@item.large_image , alt: @item.title) %>
              <% else %>
                <%= image_tag("no-image.png" , alt: @item.title) %>
              <% end %>
            </div>
          </div>
          <div class="detail">
            <p class="title">
              <%= @item.title %>
            </p>
          </div>
          <%= render 'items/action' , item: @item %>
        </div>
        
        <div class="item-single-side">
          <div class="side-box">
            <h4 class="side-box-title">Haveしたユーザー</h4>
            <div class="side-box-body">
              <% @have_users = @item.have_users %>
              <% if @have_users.any? %>
                <div class="user_avatars">
                  <% @have_users.each do |have_user| %>
                    <%= link_to gravatar_for(have_user, size: 30), have_user %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="side-box">
            <h4 class="side-box-title">Wantしたユーザー</h4>
            <div class="side-box-body">
              <% @want_users = @item.want_users %>
              <% if @want_users.any? %>
                <div class="user_avatars">
                  <% @want_users.each do |want_user| %>
                    <%= link_to gravatar_for(want_user, size: 30), want_user %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="text-center">
            <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url, target: "_blank") %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <p>No have items</p>
  <% end %>
<% end %>

